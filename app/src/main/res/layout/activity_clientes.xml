<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_clientes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rafaelpinheiro.atmempresaconsultoria.ClientesActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/detalhe_cliente"
            android:id="@+id/imagemDetalheClientesId" />

        <TextView
            android:text="Nossos Clientes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textoDetalheClientesId"
            android:layout_weight="10"
            android:textAlignment="viewStart"
            android:textSize="24sp"
            android:textColor="@android:color/holo_green_light"
            android:layout_marginTop="40dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cliente1"
        android:id="@+id/imagemCliente1Id"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:text="Empresa de Desenvolvimento de Sistemas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textoCliente1Id"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:textStyle="normal|bold"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cliente2"
        android:id="@+id/imagemCliente2Id"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:text="Empresa de auditoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:textStyle="normal|bold"
        android:textSize="18sp" />
</LinearLayout>
