<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_servicos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rafaelpinheiro.atmempresaconsultoria.ServicosActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/detalhe_servico"
            android:id="@+id/imagemDetalheServicosId"
            android:layout_weight="1" />

        <TextView
            android:text="Servicos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textoDetalheServicosId"
            android:layout_weight="10"
            android:layout_marginTop="40dp"
            android:textSize="24sp"
            android:textColor="@android:color/holo_blue_bright" />

    </LinearLayout>

    <TextView
        android:text="Consultoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textoConsultoriaId"
        android:paddingLeft="50dp"
        android:paddingTop="20dp"
        android:layout_weight="0.03"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Processos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textoProcessosId"
        android:paddingLeft="50dp"
        android:paddingTop="20dp"
        android:layout_weight="0.03"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text=" Acompanhamento e projetos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textoAcompanhamentoId"
        android:paddingLeft="50dp"
        android:paddingTop="20dp"
        android:layout_weight="0.03"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

</LinearLayout>
